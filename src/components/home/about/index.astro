---

// IMPORTS ASTRO LAYOUTS
import Container from '@/layouts/container/index.astro'

// IMPORTS ASTRO ATOMS
import ButtonArrow from "@/atoms/button/arrow/index.astro"
import Link from '@/atoms/link/index.astro'
import ParagraphXl from "@/atoms/paragraph/xl/index.astro"
import Picture from "@/atoms/picture/internal/index.astro"

const data = {

    title: "For fifteen years, Ruckus has been delivering work that powers game-changing companies and global influencers.",
    description: "Our core strategic engagements in branding, platform design, campaigns, and content creation consistently drive desired outcomes and awareness.",
    button_text: "See Who We Are",
    button_link: "/about-us",
    cover: "/hardcoded/about-cover.png"

}

---
<Container>
    <section class="grid grid-cols-2 gap-14 py-20">
        <section class="flex flex-col gap-12 justify-center">
            <div>
            <h2 class="font-futura_pt font-light text-5xl text-rm_black leading-tight">For fifteen years, Ruckus has been delivering work that powers</h2>
            <h2 class="font-futura_pt font-bold text-5xl text-rm_black leading-tight">game-changing companies and global influencers.</h2>
        </div>
            <div class="border-l border-l-rm_orange pl-6">
                <ParagraphXl>{ data.description }</ParagraphXl>
            </div>
            <Link href={ data.button_link } aria_label={ data.button_text }>
                <ButtonArrow>{ data.button_text }</ButtonArrow>
            </Link>
        </section>
        <section class="flex justify-end">
            <div class="size-[480px] bg-zinc-200">
                <Picture
                    alternative_text=""
                    source={ data.cover }
                />
            </div>
        </section>
    </section>
</Container>
