---

// IMPORTS ASTRO LAYOUTS
import Container from '@/layouts/container/index.astro'

// IMPORTS ASTRO ATOMS
import ButtonArrow from "@/atoms/button/arrow/index.astro"
import Link from '@/atoms/link/index.astro'
import PictureInternal from "@/atoms/picture/internal/contain/index.astro"

const data = {

    title: "Featured Clients",
    button_text: "View All Work",
    button_link: "/work"

}

const clients = [
    {

        category: "Beauty / Skincare",
        cover: "/hardcoded/beekman.png",
        link: "/work/beekman-1802"

    },
    {

        category: "Automotive",
        cover: "/hardcoded/bmw.png",
        link: "/work/bmw"

    },
    {

        category: "Beauty / Skincare",
        cover: "/hardcoded/murad.png",
        link: "/work/murad-skincare"

    },
    {

        category: "Government",
        cover: "/hardcoded/nyc-ferry.png",
        link: "/work/nyc-ferry"

    },
    {

        category: "Beauty / Skincare",
        cover: "/hardcoded/tweezer.png",
        link: "/work/tweezerman"

    },
    {

        category: "Childrenâ€™s Toys",
        cover: "/hardcoded/crayola.png",
        link: "/work/brians-dots-crayola"

    },
    {

        category: "Automotive",
        cover: "/hardcoded/mobileye.png",
        link: "/work"

    },
    {

        category: "Retail",
        cover: "/hardcoded/petvalu.png",
        link: "/work/petvalu"

    },
]

---
<Container>
    <section class="pb-20">
        <span class="font-futura_pt font-light text-rm_orange text-5xl">Featured </span>
        <span class="font-futura_pt font-semibold text-rm_orange text-5xl"> Clients</span>
        <div class="grid grid-cols-4 gap-x-8 pt-16">
            {

                clients.map( ( value ) => {

                    return(
                        <div class="border-t border-rm_orange">
                            <div class="grayscale hover:grayscale-0 flex flex-col items-center justify-center gap-4 py-12">
                                <Link href={ value.link } aria_label="">
                                    <div class="h-28 w-full">
                                        <PictureInternal
                                            alternative_text=""
                                            source={ value.cover }
                                        />
                                    </div>
                                </Link>
                                <Link href={ value.link } aria_label={ value.category }>
                                    <span class="text-rm_orange uppercase font-benton_sans font-light">{ value.category }</span>
                                </Link>
                            </div>
                        </div>
                    )

                })

            }
        </div>
        <div class="flex justify-end pt-2">
            <Link href={ data.button_link } aria_label={ data.button_text }>
                <ButtonArrow>{ data.button_text }</ButtonArrow>
            </Link>
        </div>
    </section>
</Container>
